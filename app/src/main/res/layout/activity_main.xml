<?xml version="1.0" encoding="utf-8"?>
<com.example.layoutchangedpractice.TestLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center">

    <Button
        android:text="Change size"
        android:id="@+id/btn_change_size"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:onClick="changeSize"/>

    <com.example.layoutchangedpractice.TestView
        android:id="@+id/test_view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ViewStub
        android:id="@+id/stub"
        android:layout="@layout/stub_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.example.layoutchangedpractice.TestView
        android:id="@+id/test_view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:text="Show stub"
        android:id="@+id/btn_show_stub"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:onClick="showStub"/>

